@model LoginDto
@{
    ViewData["Title"] = "Login";
    //Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}



<div class="container-scroller mt-5">
    <div class="container-fluid page-body-wrapper full-page-wrapper mt-5">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div style="margin-left:500px" class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5">

                        <h4 class="mt-5">Hello from to Point Cut! </h4>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <form class="pt-3" method="post" asp-action="Login">
                            <div class="form-group">
                                <input asp-for="UserNameOrEmail" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Username or email">
                                <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Password" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>

                            </div>


                            <div class="mt-3">
                                <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">SIGN IN</button>
                            </div>
                            <div class="my-2 d-flex justify-content-between align-items-center">
                                
                                
                                @*<a asp-area="AdminArea" asp-controller="Account" asp-action="ForgotPassword" class="auth-link text-black">Forgot password?</a>*@
                            </div>
                           
                          @*  <div class="text-center mt-4 fw-light">
                                Don't have an Account? <a asp-area="AdminArea" asp-controller="Account" asp-action="Register" class="text-primary">Register</a>
                            </div>*@
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>