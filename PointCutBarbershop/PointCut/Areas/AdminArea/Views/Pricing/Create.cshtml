@model PricingDto
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}


<div class="container my-5">
    <form class="forms-sample mt-5" method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Name"> Name:</label>
            <input class="form-control" style="width:300px" asp-for="Name">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price">Price:</label>
            <input class="form-control" style="width:300px" asp-for="Price">
            <span class="text-danger" asp-validation-for="Price"></span>
        </div>
        <div class="form-group">
            <label asp-for="Service1">Service 1:</label>
            <input class="form-control" style="width:300px" asp-for="Service1">
            <span class="text-danger" asp-validation-for="Service1"></span>
        </div>
        <div class="form-group">
            <label asp-for="Service2">Service 2:</label>
            <input class="form-control" style="width:300px" asp-for="Service2">
            <span class="text-danger" asp-validation-for="Service2"></span>
        </div>
        <div class="form-group">
            <label asp-for="Service3">Service 3:</label>
            <input class="form-control" style="width:300px" asp-for="Service3">
            <span class="text-danger" asp-validation-for="Service3"></span>
        </div>
        <div class="form-group">
            <label asp-for="Service4">Service 4:</label>
            <input class="form-control" style="width:300px" asp-for="Service4">
            <span class="text-danger" asp-validation-for="Service4"></span>
        </div>
        <div class="form-group">
            <label asp-for="Service5">Service 5:</label>
            <input class="form-control" style="width:300px" asp-for="Service5">
            <span class="text-danger" asp-validation-for="Service5"></span>
        </div>




        <button type="submit" class="btn btn-primary me-2">Submit</button>
        <a asp-controller="Pricing" asp-action="Index" class="btn btn-light">Cancel</a>
    </form>
</div>
