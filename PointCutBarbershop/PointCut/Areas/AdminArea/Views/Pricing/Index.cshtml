@model List<PricingDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
    int count = 1;
}


<<div class="container">
    <div class="row">

        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="header d-flex justify-content-between my-5">
                        <h1 class="card-title my-3">Events</h1>
                        <div><a class="btn btn-success btn-sm my-4" asp-controller="Pricing" asp-action="Create">Create</a></div>




                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th> No </th>
                                    <th> Name </th>
                                    <th> Price </th>
                                    <th> Servis 1 </th>
                                    <th> Servis 2 </th>
                                    <th> Servis 3 </th>
                                    <th> Servis 4 </th>
                                    <th> Servis 5 </th>
                                    <th> Setting </th>

                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var pricing in Model)
                                {
                                    <tr>
                                        <td> @count </td>
                                        <td> @pricing.Name </td>
                                        <td> @pricing.Price </td>
                                        <td>@pricing.Service1  </td>
                                        <td>@pricing.Service2  </td>
                                        <td>@pricing.Service3  </td>
                                        <td>@pricing.Service4 </td>
                                             <td>@pricing.Service5  </td>
                                        <td>

                                            <a class="btn btn-inverse-warning btn-sm" asp-controller="HeroWrap" asp-action="Edit" asp-route-Id="@pricing.Id"><i class="mdi mdi-grease-pencil"></i></a>
                                            <form style="display:inline;" asp-controller="Pricing" asp-action="Delete" asp-route-Id="@pricing.Id">
                                                <button type="submit" class="btn btn-danger btn-sm"><i class="mdi mdi-delete-forever"></i></button>
                                            </form>
                                        </td>
                                    </tr>
                                    count++;
                                }






                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

