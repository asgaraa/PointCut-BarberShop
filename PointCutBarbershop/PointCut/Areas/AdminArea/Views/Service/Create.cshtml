@model ServicesDto
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}


<div class="container my-5">
    <form class="forms-sample mt-5" method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Title"> Title:</label>
            <input class="form-control" style="width:300px" asp-for="Title">
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">Description:</label>
            <input class="form-control" style="width:300px" asp-for="Description">
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>
        <div class="form-group">
            <label asp-for="Photo"> Photo:</label>
            <input class="form-control" style="width:300px" asp-for="Photo">
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>
     



        <button type="submit" class="btn btn-primary me-2">Submit</button>
        <a asp-controller="Service" asp-action="Index" class="btn btn-light">Cancel</a>
    </form>
</div>
