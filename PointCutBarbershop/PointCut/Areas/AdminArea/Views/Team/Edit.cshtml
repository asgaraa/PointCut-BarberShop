@model TeamEditDto
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="container my-5">
    <form class="forms-sample mt-5" method="post" asp-action="Edit" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Photo"> Image:</label>
            <input class="form-control" style="width:300px" asp-for="Photo">
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>
        <div class="form-group">
            <label asp-for="Name">Name:</label>
            <input class="form-control" style="width:300px" asp-for="Name">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Job">Job:</label>
            <input class="form-control" style="width:300px" asp-for="Job">
            <span class="text-danger" asp-validation-for="Job"></span>
        </div>




        <button type="submit" class="btn btn-primary me-2">Submit</button>
        <a asp-controller="Team" asp-action="Index" class="btn btn-light">Cancel</a>
    </form>
</div>

