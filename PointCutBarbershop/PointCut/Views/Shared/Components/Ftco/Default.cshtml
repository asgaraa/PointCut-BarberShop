@model List<SalonDto>
@{
    ViewData["Title"] = "Default";
}

<section class="ftco-section ftco-no-pt ftco-no-pb">
	<div class="container-fluid px-0">
		@foreach (var item in Model)
		{
			<div class="row no-gutters">
				<div class="col-md text-center d-flex align-items-stretch">
					<div class="services-wrap d-flex align-items-center img" style="background-image: url(Assets/images/Salon/@item?.ImageForMen);">
						<div class="text">
							<h3>@item?.TitleForMen</h3>
							<p><a asp-controller="Pricing" asp-action="Index" class="btn-custom">@item?.Pricing <span class="ion-ios-arrow-round-forward"></span></a></p>
						</div>
					</div>
				</div>
				<div class="col-md-3 text-center d-flex align-items-stretch">
					<div class="text-about py-5 px-4">
						<h1 class="logo">
							<a asp-controller="Home" asp-action="Index"><img style="width:100px; height:70px;" src="~/Assets/images/pas.png"></a>
						
						</h1>
						<h1 class="logo">
					
							<a asp-controller="Home" asp-action="Index">PointCut BarberShop</a>
						</h1>
						<h2>@item?.Welcome</h2>
						<p> @item?.AboutSalon</p>
						@*	<p class="mt-3"><a href="#" class="btn btn-primary btn-outline-primary">Read more</a></p>*@
					</div>
				</div>
				<div class="col-md text-center d-flex align-items-stretch">
					<div class="services-wrap d-flex align-items-center img" style="background-image: url(Assets/images/Salon/@item?.ImageForWomen);">
						<div class="text">
							<h3>@item?.TitleForWomen</h3>
							<p><a asp-controller="Pricing" asp-action="Index" class="btn-custom">@item?.Pricing <span class="ion-ios-arrow-round-forward"></span></a></p>
						</div>
					</div>
				</div>
			</div>
		}
		
	</div>
</section>

